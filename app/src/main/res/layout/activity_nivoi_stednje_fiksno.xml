<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/sky"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Nivoi štednje"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rgFiksniIznos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textTitle"
        android:checkedButton="@+id/rbI1"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/rbI1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="5 RSD"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rbI2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="10 RSD"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rbI3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="20 RSD"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rbI4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="drugi iznos"
            android:textSize="20dp" />

    </RadioGroup>

    <EditText
        android:id="@+id/editI4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rgFiksniIznos"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start"
        android:layout_marginEnd="114dp"
        android:hint="RSD"
        android:inputType="number"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSacuvajPlanFiksno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"

        android:text="SAČUVAJ PLAN" />

</RelativeLayout>