<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/white"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textOcekivaniDatumZavrsetka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="227dp"
        android:text="Očekivani datum završetka:"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textOcekivaniDatumZavrsetkaValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="192dp"
        android:text=""
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnVidiPredlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="89dp"
        android:layout_toStartOf="@+id/btnIzmeniPlan"
        android:text="Vidi predlog"
        android:background="@drawable/button"
        android:padding="5dp" />

    <Button
        android:id="@+id/btnIzmeniPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Izmeni plan"
        android:background="@drawable/button"
        android:padding="5dp" />

    <Button
        android:id="@+id/btnUzmiKredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnVidiPredlog"
        android:layout_toEndOf="@+id/btnIzmeniPlan"
        android:text="Uzmi kredit"
        android:background="@drawable/button"
        android:padding="5dp" />
</RelativeLayout>